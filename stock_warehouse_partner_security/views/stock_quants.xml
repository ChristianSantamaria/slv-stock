<odoo>
    <record model="ir.ui.view" id="view_stock_quant_tree_location_id_inherit">
        <field name="name">stock.quant.tree.editable.inherit.partner</field>
        <field name="model">stock.quant</field>
        <field name="priority" eval="16"/>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"></field>
        <field name="groups_id" eval="[(4,ref('stock_warehouse_partner_security.group_stock_picking_partner'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="before">
                <field name="location_partner_ids" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="domain">[('location_id', 'in', location_partner_ids)]</attribute>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_stock_quant_tree_location_id_manager_inherit">
        <field name="name">stock.quant.tree.editable.inherit.manager</field>
        <field name="model">stock.quant</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="stock.view_stock_quant_tree_editable"></field>
        <field name="groups_id" eval="[(4,ref('stock.group_stock_manager'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='location_id']" position="replace">
                <field name="location_id" attrs="{'readonly': [('id', '!=', False)]}" invisible="context.get('hide_location', False)" options="{'no_create': True}"/>
            </xpath>
            <xpath expr="//field[@name='location_id']" position="attributes">
                <attribute name="domain">[(1,"=",1)]</attribute>
            </xpath>
        </field>
    </record>


    
</odoo>
